= simple_form_for @resume do |f|
  %h3 Email
  = f.input :email, input_html: { value: @vibe["email"] }
  %h3 Basic Info
  = f.input :first_name, input_html: { value: @vibe["name"].split(' ').first }
  = f.input :middle_name, input_html: { value: @vibe["name"].split(' ').count == 3 ? @vibe["name"].split(' ').second : "" }
  = f.input :last_name, input_html: { value: @vibe["name"].split(' ').count > 1 ? @vibe["name"].split(' ').last : "" }
  = f.input :website, input_html: { value: @vibe["websites"][0]["url"] }
  = f.input :phone
  = f.input :bio, input_html: { value: @bio }
  %h3 Social
  = f.input :twitter_username, input_html: { value: @twitter }
  = f.input :facebook_url, input_html: { value: @facebook }
  %h3 Work
  #work_experiences
    = f.simple_fields_for :work_experiences do |work_experience|
      = render 'work_experience_fields', :f => work_experience
    .links
      = link_to_add_association 'add work_experience', f, :work_experiences
  %h3 Education
  #educations
    = f.simple_fields_for :educations do |education|
      = render 'education_fields', :f => education
    .links
      = link_to_add_association 'add education', f, :educations
  %h3 Skills
  #skills
    = f.simple_fields_for :skills do |skill|
      = render 'skill_fields', :f => skill
    .links
      = link_to_add_association 'add skill', f, :skills
  %h3 References
  #references
    = f.simple_fields_for :references do |reference|
      = render 'reference_fields', :f => reference
    .links
      = link_to_add_association 'add reference', f, :references
  = f.submit